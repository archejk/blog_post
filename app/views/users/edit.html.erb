<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Edit Profile</h2>
      <p class="text-gray-600 mt-2">Update your profile information :)</p>
    </div>

    <%= form_with model: @user, url: user_path, local: true, html: { multipart: true, class: "space-y-6" } do |f| %>
      <div class="text-center">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "w-32 h-32 rounded-full object-cover mx-auto mb-4" %>
        <% else %>
          <div class="w-32 h-32 rounded-full bg-gray-100 flex items-center justify-center mx-auto mb-4">
            <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
        <div class="mt-4 text-center">
          <%= f.label :avatar, "Upload new avatar", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.file_field :avatar, class: "mx-auto block" %>
          <p class="mt-1 text-xs text-gray-500">Select a file to upload</p>
        </div>
      </div>
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="flex space-x-4">
        <%= f.submit "Update Profile", class: "flex-1 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors font-medium" %>
        <%= link_to "Cancel", user_path, class: "flex-1 bg-gray-300 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors font-medium text-center" %>
      </div>
    <% end %>
  </div>
</div>
