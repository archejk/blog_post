<!DOCTYPE html>
<html>
  <head>
    <title>Blog Post</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-6xl mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <%= link_to "Blog Post", root_path, class: "text-2xl font-bold text-blue-600 hover:text-blue-800" %>
          
          <div class="flex items-center space-x-4">
            <% if user_signed_in? %>
              <div class="flex items-center space-x-2">
                <% if current_user.avatar.attached? %>
                  <%= link_to user_path, class: "flex items-center space-x-2 text-gray-600 hover:text-gray-800" do %>
                    <%= image_tag current_user.avatar, class: "w-8 h-8 rounded-full object-cover" %>
                    <span>Hello, <%= current_user.display_name %>!</span>
                  <% end %>
                <% else %>
                  <%= link_to user_path, class: "flex items-center space-x-2 text-gray-600 hover:text-gray-800" do %>
                    <div class="w-8 h-8 rounded-full bg-gray-300 flex items-center justify-center">
                      <svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <span>Hello, <%= current_user.display_name %>!</span>
                  <% end %>
                <% end %>
              </div>
              
              <%= link_to "New Post", new_blog_post_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
              <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-600 hover:text-gray-800" %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "text-blue-600 hover:text-blue-800" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 py-8">
      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" data-controller="alert">
          <%= notice %>
          <button data-action="click->alert#dismiss" class="float-right font-bold">&times;</button>
        </div>
      <% end %>

      <% if alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" data-controller="alert">
          <%= alert %>
          <button data-action="click->alert#dismiss" class="float-right font-bold">&times;</button>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>