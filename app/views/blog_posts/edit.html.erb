<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Edit Blog Post</h1>

  <%= form_with model: @blog_post, local: true do |form| %>
    <div class="bg-white rounded-lg shadow-md p-8 space-y-6">
      <% if @blog_post.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <ul class="list-disc list-inside">
            <% @blog_post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :title, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :content, required: true, rows: 10, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="flex justify-between">
        <%= link_to "Cancel", @blog_post, class: "text-gray-600 hover:text-gray-800" %>
        <%= form.submit "Update Post", 
            class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    </div>
  <% end %>
</div>